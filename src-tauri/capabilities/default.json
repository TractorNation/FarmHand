{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "store:default",
    "clipboard-manager:allow-write-text",
    "fs:allow-exists",
    "fs:allow-read-dir",
    "fs:allow-applocaldata-read",
    "fs:allow-applocaldata-write",
    "fs:allow-applocaldata-read-recursive",
    "fs:allow-read",
    "fs:allow-write-file",
    "fs:allow-mkdir",
    {
      "identifier": "fs:scope-applocaldata",
      "allow": [
        "$APPLOCALDATA/**/*"
      ],
      "deny": []
    },
    "dialog:default"
  ]
}