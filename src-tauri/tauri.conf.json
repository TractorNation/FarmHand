{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "farmhand",
  "version": "0.2026.3",
  "identifier": "com.tractortechs.farmhand",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build:ci",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [{ "title": "farmhand", "width": 800, "height": 600 }],
    "security": { "csp": null }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "android": { "minSdkVersion": 21 },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": "Entitlements.plist",
      "infoPlist": "Info.plist"
    },
    "iOS": { "minimumSystemVersion": "14.0", "bundleVersion": "0.2026.3" }
  }
}
